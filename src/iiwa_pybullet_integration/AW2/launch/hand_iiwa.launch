<?xml version="1.0"?>
<launch>
    <!-- Arguments available to run this -->
    <arg name="robot_name" default="hand_iiwa"/>
    <arg name="rviz" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="sim" default="true"/>
    <arg name="end_effector" default="false"/>
    <arg name="hardware_interface" default="PositionJointInterface"/>
    <arg name="robot_description" default="$(find sr_description)/robots/handlit_iiwa7.urdf.xacro" />
    <remap from="/hand_iiwa/joint_states" to="/joint_states"/>
    <arg name="world" default="$(find iiwa_fri_gazebo)/worlds/iiwa.world"/>
    <arg name="initial_z" default="0.745" />
    <arg name="start_home" default="$(arg sim)"/>
    

    
    <!--Ros controllers -->
    <include file="$(find handlit_iiwa7_controller)/launch/handlit_iiwa7_controller.launch">
      <arg name="robot_name" value="$(arg robot_name)"/>
      <arg name="sim" value="$(arg sim)"/>
      <arg name="hardware_interface" value="$(arg hardware_interface)"/>
    </include>
    
`   <!-- Scene Stuff -->
    <group if="$(arg sim)">
      <include file="$(find iiwa_fri_gazebo)/launch/iiwa_world.launch">
        <arg name="hardware_interface" value="$(arg hardware_interface)"/>
        <arg name="robot_description" value="$(arg robot_description)" />
        <arg name="robot_name" value="$(arg robot_name)"/>
        <arg name="world" value="$(arg world)"/>
        <arg name="initial_z" value="$(arg initial_z)" />
        <arg name="start_home" value="$(arg start_home)"/>
        <arg name="gui" value="$(arg gui)"/>
      </include> 
    </group>
    
    <!-- Moveit -->
    <include file="$(find handlit_iiwa7_bioik)/launch/planning_context.launch"> 
        <arg name="load_robot_description" value="true" unless="$(arg sim)"/>
        <arg name="initial_z" value="$(arg initial_z)" />

	
    </include>
    <include file="$(find handlit_iiwa7_bioik)/launch/move_group.launch">
        <arg name="hardware_interface" value="$(arg hardware_interface)"/>
    </include>
    
    <!-- GUI -->
    <include if="$(arg rviz)" file="$(find handlit_iiwa7_bioik)/launch/moveit_rviz.launch">
        <arg name="config" value="true"/>
    </include>

     
</launch>
